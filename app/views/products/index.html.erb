<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Isbn</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |item| %>
      <tr>
        <td><%= item.title %></td>
        <td><%= item.isbn %></td>
        <td><%= image_tag(item.image_link)%></td>
        <td><%= link_to 'Edit', search_product_path(@item) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>
